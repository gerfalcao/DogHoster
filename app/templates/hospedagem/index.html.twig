{% extends 'base.html.twig' %}

{% block title %}Hospedagem index{% endblock %}

{% block body %}
    <h1>Hospedagem index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cão</th>
                <th>Dono</th>
                <th>Data_inicio</th>
                <th>Data_fim</th>
                <th>Duração total</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hospedagem in hospedagems %}
            <tr>
                <td>{{ hospedagem.id }}</td>
                <td>{{ hospedagem.getCachorro}}</td>
                <td>{{ hospedagem.getCachorro.getDono}}</td>
                <td>{{ hospedagem.dataInicio ? hospedagem.dataInicio|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ hospedagem.dataFim ? hospedagem.dataFim|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ hospedagem.getDuration().format('%a dias, %h horas, %i minutos') }}</td>
                <td></td>
                <td>
                    <a href="{{ path('app_hospedagem_show', {'id': hospedagem.id}) }}">show</a>
                    <a href="{{ path('app_hospedagem_edit', {'id': hospedagem.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_hospedagem_new') }}">Agendar nova Hospedagem</a>
    <br><br>
    <a href="/cachorro/new">Cadastrar novo Cachorro</a>
    <br>
    <a href="/dono/new">Cadastrar novo Dono</a>

    <div>
        {% for hospedagem in hospedagems %}
            <div><p>Exemplo</p><p>{{ hospedagem.getCachorro}}{{ hospedagem.getCachorro.getDono}}</p></div>
       
        {% endfor %}

    </div>

{% endblock %}
